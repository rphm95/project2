<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %> 
<body>
    <%- include('../partials/header.ejs') %> 
    <h1 class="margin">Explore the World</h1>
    <div class="container-fluid" id="container-index2">
    
    <form class="inline-form sort-form" action="/locations" method="GET"> 
        <div class="input-group mb-3">
            <div>
                <label class="input-group-text" style="background-color: rgb(34, 33, 33); color: white;" for="inputGroupSelect01">Sort By</label>
            </div>
                <select class="form-select" id="inputGroupSelect01" name="sortBy" onchange="if(this.value != 0) { this.form.submit(); }">
                    <option value="none" 
                    <% if (select === "none") { %> 
                        selected 
                    <% } %> >Choose Sort Option...</option>
                    
                    <option value="mostRecent" 
                        <% if (select === "recent") { %> 
                            selected 
                        <% } %> >Most Recent</option>
                    
                    <option value="locationName" 
                        <% if (select === "alphabetically") { %> 
                            selected 
                        <% } %> >Destination A-Z</option>      
               </select>
        </div>
    </form>
    
        <div class="row row-cols-2 row-cols-md-3 g-4">
        
            <% for(let i = 0; i < locations.length; i++) { %>
                <div class="col">
                    <div class="card">
                        <a class="animation-hover" href="/locations/<%=locations[i].id%>">
                            <img src="<%=locations[i].img%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><%=locations[i].location%></h5>
                                <p class="card-text"><%=locations[i].description.substring(0, 74) + "..." %> </p>
                            </div>
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

<%- include('../partials/footer.ejs') %>
    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>